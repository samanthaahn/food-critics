        {{/if}}

    </nav>

    <!-- right input bar -->
    <aside>

        {{#if loggedIn}}
        {{> dishinput}}
        <h1 class="reviewlink"><a href="/review">Review a Dish!</a></h1>
        {{/if}}

    </aside>

    {{!-- Render the sub layout --}}
    {{{body}}}



    {{#if loggedIn}}
    <script src="/js/logout.js"></script>
    {{/if}}
