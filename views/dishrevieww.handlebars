


<div id="dish-review-container">
  <h2>Dish Review</h2>

  <div class="form-box">
    <h3>Dish Description</h3>
    <form id="dish-description-form">
      <label for="dish_name">Dish Name:</label>
      <select name="dish_name" id="dish_name" class="form-control">
        <!-- Dish options will be added here -->
      </select>
    </form>
  </div>

  <div class="form-box">
    <h3>Review</h3>
    <form id="review-form">
      <label for="stars">Rating:</label>
      <select name="stars" id="stars" class="form-control">
        <option value="1">1 Star</option>
        <option value="2">2 Stars</option>
        <option value="3">3 Stars</option>
        <option value="4">4 Stars</option>
        <option value="5">5 Stars</option>
      </select>

      <label for="review">Review:</label>
      <textarea name="review" id="review" rows="4" class="form-control" placeholder="Enter your review"></textarea>

      <button type="submit" class="btn btn-primary">Submit Review</button>
    </form>
  </div>
</div>
